<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center; margin:15;">Edit <%= book.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 0 auto;">
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="book[name]" value="<%= book.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[description]" value="<%= book.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="book[img]" value="<%= book.img %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">go home</a>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>