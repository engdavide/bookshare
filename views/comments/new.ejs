<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align: center; margin:15;">Add a comment to <%= book.name %> </h1>
        <div class="row">
            <div style="width: 30%; margin: 0 auto;">
                <form action="/books/<%= book.id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="your comment">
                    </div>
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/">go home</a>
            </div>
        </div>
        
    </div>


